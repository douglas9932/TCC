unit UCaixa;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, UDM, Data.DB, Vcl.StdCtrls, Vcl.Buttons,
  Vcl.DBCtrls, Vcl.Grids, Vcl.DBGrids, Vcl.Mask;

type
  TFCaixa = class(TForm)
    Label1: TLabel;
    Label4: TLabel;
    Label5: TLabel;
    Label6: TLabel;
    Label7: TLabel;
    DBEdit7: TDBEdit;
    Label8: TLabel;
    Label9: TLabel;
    Label10: TLabel;
    Label11: TLabel;
    DBGrid1: TDBGrid;
    DBText1: TDBText;
    DBText2: TDBText;
    DBText3: TDBText;
    DBText4: TDBText;
    DBText5: TDBText;
    DBText6: TDBText;
    DBText7: TDBText;
    BitBtn1: TBitBtn;
    BitBtn2: TBitBtn;
    BitBtn3: TBitBtn;
    DBLookupComboBox1: TDBLookupComboBox;
    procedure BitBtn1Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  FCaixa: TFCaixa;

implementation

{$R *.dfm}

procedure TFCaixa.BitBtn1Click(Sender: TObject);
begin

    if DM.TBCaixaSTATUSCAIXA.AsString = 'ABERTO' then
    begin
    Showmessage('O Caixa Já Está Aberto');
    Abort;
    End

    else
    DM.TBCaixa.Insert;
    DM.TBCaixaVALORENTRADA.AsFloat := 0;
    DM.TBCaixaVALORSAIDA.AsFloat:= 0;
    DM.TBCaixaSALDO.AsFloat:= 0;
    DM.TBCaixaDATAABERTUDA.AsDateTime:= Date;
    DM.TBCaixaSTATUSCAIXA.AsString:= 'ABERTO';
    DM.TBCaixa.Post;
end;

end.
