unit UCaixa;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, UDM, Data.DB, Vcl.StdCtrls, Vcl.Buttons,
  Vcl.DBCtrls, Vcl.Grids, Vcl.DBGrids, Vcl.Mask, Vcl.ExtCtrls;

type
  TFCaixa = class(TForm)
    Label1: TLabel;
    Label5: TLabel;
    Label6: TLabel;
    Label7: TLabel;
    DBEdit7: TDBEdit;
    Label8: TLabel;
    Label9: TLabel;
    Label10: TLabel;
    Label11: TLabel;
    DBGrid1: TDBGrid;
    DBText1: TDBText;
    DBText2: TDBText;
    DBText3: TDBText;
    DBText4: TDBText;
    DBText5: TDBText;
    DBText6: TDBText;
    DBText7: TDBText;
    BitBtn1: TBitBtn;
    BitBtn2: TBitBtn;
    BitBtn3: TBitBtn;
    BitBtn4: TBitBtn;
    BitBtn5: TBitBtn;
    Panel3: TPanel;
    procedure BitBtn1Click(Sender: TObject);
    procedure BitBtn2Click(Sender: TObject);
    procedure BitBtn3Click(Sender: TObject);
    procedure BitBtn4Click(Sender: TObject);
    procedure BitBtn5Click(Sender: TObject);



  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  FCaixa: TFCaixa;

implementation

{$R *.dfm}

uses UDebitoCredito, UPesquisaCaixa;

procedure TFCaixa.BitBtn1Click(Sender: TObject);
begin
DM.TBCaixa.Refresh;
    if DM.TBCaixaSTATUSCAIXA.AsString = 'ABERTO' then
    begin
    Showmessage('O Caixa Já Está Aberto');
    Abort;
    End

    else
    DM.TBCaixa.Insert;
    DM.TBCaixaVALORENTRADA.AsFloat := 0;
    DM.TBCaixaVALORSAIDA.AsFloat:= 0;
    DM.TBCaixaSALDO.AsFloat:= 0;
    DM.TBCaixaDATAABERTUDA.AsDateTime:= Date;
    DM.TBCaixaSTATUSCAIXA.AsString:= 'ABERTO';
    DM.TBCaixa.Post;



end;

procedure TFCaixa.BitBtn2Click(Sender: TObject);
begin

  if DM.TBCaixaSTATUSCAIXA.AsString = 'FECHADO' then
    begin
    Showmessage('O Caixa Já Está Fechado');
    Abort;
    End

    else
    DM.TBCaixa.Edit;
    {DM.TBCaixaVALORENTRADA.AsFloat:= 0;
    DM.TBCaixaVALORSAIDA.AsFloat:=0;
    DM.TBCaixaSALDO.AsFloat:=0;}
    DM.TBCaixaDATAFECHAMENTO.AsDateTime:=Date;
    DM.TBCaixaSTATUSCAIXA.AsString:='FECHADO';
    DM.TBCaixa.Post;
    DM.TBCaixa.Refresh;
end;

procedure TFCaixa.BitBtn3Click(Sender: TObject);
begin
if DM.TBCaixaSTATUSCAIXA.AsString = 'FECHADO' then
    begin
      Showmessage('O Caixa Está Fechado, Não É Possivel Realizar Movimentos');
      Abort;
    end
    else

FDebitoCredito.Showmodal;
end;

procedure TFCaixa.BitBtn4Click(Sender: TObject);
begin
    FPesquisaCaixa.Showmodal;
end;

procedure TFCaixa.BitBtn5Click(Sender: TObject);
begin
Close;
end;





end.
