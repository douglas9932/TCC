unit UPesquisaCompra;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Data.DB, Vcl.Grids, Vcl.DBGrids,
  Vcl.StdCtrls, Vcl.ExtCtrls, Vcl.Buttons;

type
  TFPesquisaCompra = class(TForm)
    BTPesquisa: TBitBtn;
    EDPesquisa: TEdit;
    RadioGroup1: TRadioGroup;
    DBGrid1: TDBGrid;
    procedure BTPesquisaClick(Sender: TObject);
    procedure EDPesquisaKeyPress(Sender: TObject; var Key: Char);
    procedure FormShow(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  FPesquisaCompra: TFPesquisaCompra;

implementation

{$R *.dfm}

procedure TFPesquisaCompra.BTPesquisaClick(Sender: TObject);
begin

  if (RGPesquisa.ItemIndex = 1) and (EDPesquisa.Text = '') then
  begin
  Showmessage('Digite um Código Para Pesquisar por Código');
  EDPesquisa.SetFocus;
  abort;
  end
  Else

  With DM.QuPesquisa do
  Begin
		Close;
		Sql.clear;
	  Begin
      //Data:=EdPesquisa.Text;
      //DM./QUPesquisa.ParamByName('pData').AsDateTime:=StrToDate(Data);
   	  Case RGPesquisa.ItemIndex of
    	  0:SQL.Add('Select * from Venda');
        1:SQL.Add('Select * from Venda where  IdVenda = '+EdPesquisa.Text);
        2:SQL.Add('Select * from Venda, Funcionario where Funcionario.IDFuncionario = Venda.IDFuncionario and Funcionario.NomeFuncionario like '+#39+EdPesquisa.text+'%'+#39);
        3:SQL.Add('Select * from Venda, Cliente where Cliente.IDCliente = Venda.IDCliente and Cliente.NomeCliente like '+#39+EdPesquisa.text+'%'+#39);
        4:SQL.Add('Select * from Venda where DATAVENDA = '+(EdPesquisa.Text));
        5:SQL.Add('Select * from Venda where Tipo like '+#39+EdPesquisa.text+'%'+#39);
        6:SQL.Add('Select * from Venda where StatusVenda like '+#39+EdPesquisa.text+'%'+#39);
        end;
	    open;
    	end;
      DBGrid1.setfocus;
  end;

end;

procedure TFPesquisaCompra.EDPesquisaKeyPress(Sender: TObject; var Key: Char);
begin
 if RGPesquisa.ItemIndex=1 then               //seleciona a opcao nome da consulta
   if not (Key in ['0'..'9',#8]) then       // e faz o bloqueio de numeros, espaco
     key := #0;

  if Key=#13 Then    //quando precionar entrer, ja exec. o botão pesquisar
  BtPesquisa.click;
end;

procedure TFPesquisaCompra.FormShow(Sender: TObject);
begin
 With DM.QuPesquisa do
  Begin
		Close;
		Sql.clear;
  End
end;

end.
